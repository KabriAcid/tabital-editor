{
  "name": "tabital-editor",
  "version": "1.0.0",
  "description": "A specialized desktop editor for Fulfulde translation work",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": ["fulfulde", "translation", "editor", "desktop"],
  "author": "Tabital Editor Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "docx": "^8.2.2",
    "pdf-lib": "^1.17.1",
    "morgan": "^1.10.0"
  },
  "build": {
    "appId": "com.tabital.editor",
    "productName": "Tabital Editor",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
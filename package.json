{
  "name": "tabital-editor",
  "version": "1.0.0",
  "description": "Fulfulde Translator Desktop App",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:renderer\" \"wait-on http://localhost:3000 && electron .\"",
    "dev:renderer": "vite",
    "build": "vite build && electron-builder",
    "build:renderer": "vite build",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "fulfulde",
    "translator",
    "editor",
    "desktop"
  ],
  "author": "Tabital Editor Team",
  "license": "MIT",
  "devDependencies": {
    "@types/sqlite3": "^3.1.8",
    "@types/node": "^20.10.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.6.0",
    "sqlite3": "^5.1.6",
    "docx": "^8.5.0",
    "electron-store": "^8.1.0",
    "lucide-react": "^0.294.0",
    "pdf-lib": "^1.17.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "build": {
    "appId": "com.tabital.editor",
    "productName": "Tabital Editor",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/main/**/*",
      "dist-renderer/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "assets/fonts",
        "to": "fonts"
      }
    ]
  }
}
